    <div id="wifi-text" class="absolute hidden bg-black text-white text-sm px-2 py-1 rounded-md shadow-md">
      Conectado a: <span id="wifi-name">Cargando...</span>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const wifiButton = document.getElementById('wifi-button');
      const wifiText = document.getElementById('wifi-text');
      const wifiNameElement = document.getElementById('wifi-name');
  
      if (wifiButton && wifiText && wifiNameElement) {
        const simulateWiFiNameFetch = () => {
          setTimeout(() => {
            wifiNameElement.textContent = 'TIGO-BBC5'; // Nombre de red ficticio
          }, 2000); // Simula una espera de 2 segundos antes de mostrar el nombre
        };
  
        const showWiFiStatus = () => {
          simulateWiFiNameFetch();
          wifiText.classList.remove('hidden'); // Muestra el texto al pasar el mouse
        };
  
        const hideWiFiStatus = () => {
          wifiText.classList.add('hidden'); // Oculta el texto al quitar el mouse
        };
  
        wifiButton.addEventListener('mouseenter', showWiFiStatus);
        wifiButton.addEventListener('mouseleave', hideWiFiStatus);
      }
    });
  </script>
  
  <style>
    .header-button {
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      cursor: pointer;
      transition: all 0.3s ease;
    }
  
    .header-button:hover {
      transform: scale(1.1); /* Aumenta ligeramente el tamaño al pasar el mouse */
    }
  
    .bi-wifi {
      width: 24px;
      height: 24px;
      transition: transform 0.3s ease; /* Animación para el icono */
    }
  
    .header-button.active {
      background-color: #ffffff; /* Fondo del botón al estar activo */
      border-radius: 8px; /* Borde redondeado */
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Sombra */
    }
  
    /* Estilos para el texto del estado de la red Wi-Fi */
    #wifi-text {
      top: calc(100% + 8px); /* Coloca el texto debajo del botón */
      left: 50%; /* Centra el texto horizontalmente */
      transform: translateX(-50%); /* Ajusta la posición del texto */
      font-size: 12px; /* Tamaño de fuente más pequeño */
      white-space: nowrap; /* Evita que el texto se rompa */
      transition: opacity 0.3s ease; /* Animación de opacidad */
      opacity: 0; /* Inicialmente oculto */
    }
  
    .header-button:hover #wifi-text {
      opacity: 1; /* Muestra el texto al pasar el mouse */
    }
  </style>
  